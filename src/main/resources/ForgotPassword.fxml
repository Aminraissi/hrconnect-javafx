<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controllers.ForgotPasswordController" stylesheets="@modern-style.css">
    <children>
        <AnchorPane style="-fx-background-color: #1E272E;">
            <!-- Background -->
        </AnchorPane>

        <BorderPane prefWidth="500" prefHeight="400">
            <top>
                <HBox alignment="CENTER" styleClass="top-bar" spacing="10">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20" />
                    </padding>
                    <Text styleClass="app-title" text="RHCONNECT" fill="white" />
                </HBox>
            </top>

            <center>
                <VBox alignment="CENTER" spacing="20" styleClass="content-container">
                    <padding>
                        <Insets top="20" right="30" bottom="20" left="30" />
                    </padding>

                    <!-- Header -->
                    <FontAwesomeIconView glyphName="KEY" size="48" styleClass="header-icon" />
                    <Label text="Mot de passe oublié" styleClass="section-title" />
                    <Label text="Entrez votre adresse email pour recevoir un code de réinitialisation"
                           styleClass="section-subtitle" textAlignment="CENTER" wrapText="true" />

                    <!-- Form -->
                    <VBox spacing="15" alignment="CENTER" styleClass="form-container">
                        <!-- Email Field -->
                        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="input-field-container">
                            <FontAwesomeIconView glyphName="ENVELOPE" size="16" styleClass="field-icon" />
                            <TextField fx:id="emailField" promptText="Adresse email" styleClass="form-field"
                                       HBox.hgrow="ALWAYS" />
                        </HBox>

                        <!-- Error/Success Messages -->
                        <Label fx:id="messageLabel" styleClass="message-label" visible="false" />

                        <!-- Submit Button -->
                        <Button fx:id="submitButton" text="Envoyer le code de réinitialisation"
                                styleClass="primary-button" onAction="#handleSubmit">
                            <graphic>
                                <FontAwesomeIconView glyphName="PAPER_PLANE" />
                            </graphic>
                        </Button>

                        <!-- Back to Login -->
                        <Hyperlink text="Retour à la connexion" onAction="#handleBackToLogin"
                                   styleClass="auth-link" />
                    </VBox>
                </VBox>
            </center>

            <bottom>
                <HBox alignment="CENTER" styleClass="footer">
                    <Label text="© 2025 - RHCONNECT | Tous droits réservés" />
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</StackPane>