<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" stylesheets="modern-profile.css" fx:controller="controllers.ProfilMembreController">
   <children>


      <!-- Main Content -->
      <BorderPane prefWidth="1200" prefHeight="800">
         <!-- Top Bar -->
         <top>
            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="top-bar">
               <padding>
                  <Insets top="15" right="30" bottom="15" left="30" />
               </padding>
               <children>
                  <Label styleClass="app-title" text="RHCONNECT" />
                  <Region HBox.hgrow="ALWAYS" />
                  <HBox alignment="CENTER" spacing="5" styleClass="user-info">
                     <FontAwesomeIconView glyphName="USER" size="16" styleClass="nav-icon" />
                     <Label fx:id="userNameLabel" styleClass="username" text="Nom d'utilisateur" />
                  </HBox>
                  <Button fx:id="logoutButton" onAction="#handleLogout" styleClass="logout-button" text="Déconnexion" />
               </children>
            </HBox>
         </top>

         <!-- Center Content -->
         <center>
            <VBox styleClass="content-container">
               <padding>
                  <Insets top="20" right="30" bottom="20" left="30" />
               </padding>
               <children>
                  <!-- Welcome Header -->
                  <HBox alignment="CENTER_LEFT" styleClass="welcome-header">
                     <FontAwesomeIconView glyphName="HOME" size="24" styleClass="section-icon" />
                     <Label styleClass="section-title" text="Tableau de bord" />
                     <Region HBox.hgrow="ALWAYS" />
                     <Label fx:id="dateTimeLabel" styleClass="datetime-label" text="11/05/2025 22:19" />
                  </HBox>

                  <!-- Role Badge -->
                  <HBox alignment="CENTER_LEFT" styleClass="role-badge-container">
                     <Label fx:id="userRoleLabel" styleClass="role-badge" text="MEMBRE" />
                     <Label fx:id="sessionInfoLabel" styleClass="session-info" text="Connecté depuis: 22:00" />
                  </HBox>

                  <!-- Main Tabs -->
                  <TabPane styleClass="main-tabs" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                     <!-- Profile Tab -->
                     <Tab text="Mon Profil">
                        <StackPane styleClass="tab-content">
                           <VBox spacing="20" styleClass="profile-container">
                              <HBox alignment="CENTER_LEFT" styleClass="section-header">
                                 <FontAwesomeIconView glyphName="ID_CARD" size="18" styleClass="section-icon" />
                                 <Label styleClass="section-title" text="Informations Personnelles" />
                              </HBox>

                              <GridPane hgap="20" vgap="15" styleClass="form-grid">
                                 <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="150" minWidth="150" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="200" />
                                 </columnConstraints>
                                 <rowConstraints>
                                    <RowConstraints minHeight="40" prefHeight="40" />
                                    <RowConstraints minHeight="40" prefHeight="40" />
                                    <RowConstraints minHeight="40" prefHeight="40" />
                                    <RowConstraints minHeight="40" prefHeight="40" />
                                 </rowConstraints>

                                 <!-- Name Field -->
                                 <Label styleClass="form-label" text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                 <VBox styleClass="input-container" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <TextField fx:id="nomField" styleClass="form-field" promptText="Entrez votre nom" />
                                 </VBox>

                                 <!-- First Name Field -->
                                 <Label styleClass="form-label" text="Prénom:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                 <VBox styleClass="input-container" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <TextField fx:id="prenomField" styleClass="form-field" promptText="Entrez votre prénom" />
                                 </VBox>

                                 <!-- Email Field -->
                                 <Label styleClass="form-label" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                 <VBox styleClass="input-container" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                    <TextField fx:id="emailField" styleClass="form-field" promptText="Entrez votre email" />
                                 </VBox>

                                 <!-- Password Field -->
                                 <Label styleClass="form-label" text="Mot de passe:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                 <VBox styleClass="input-container" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                    <PasswordField fx:id="passwordField" styleClass="form-field" promptText="••••••••" />
                                 </VBox>
                              </GridPane>

                              <HBox alignment="CENTER_RIGHT" spacing="10">
                                 <Button fx:id="resetButton" onAction="#handleReset" styleClass="secondary-button" text="Réinitialiser" />
                                 <Button fx:id="saveButton" onAction="#handleModifyProfile" styleClass="primary-button" text="Sauvegarder les Modifications" />
                              </HBox>
                           </VBox>
                        </StackPane>
                     </Tab>

                     <!-- HR Contact Tab -->
                     <Tab text="Contacter RH">
                        <StackPane styleClass="tab-content">
                           <VBox spacing="20" styleClass="hr-contact-container">
                              <HBox alignment="CENTER_LEFT" styleClass="section-header">
                                 <FontAwesomeIconView glyphName="SEARCH" size="18" styleClass="section-icon" />
                                 <Label styleClass="section-title" text="Rechercher un RH" />
                              </HBox>

                              <HBox spacing="15" styleClass="search-container">
                                 <VBox HBox.hgrow="ALWAYS">
                                    <TextField fx:id="searchField" styleClass="search-field" promptText="Rechercher par nom ou email" />
                                 </VBox>
                                 <ComboBox fx:id="sortComboBox" styleClass="sort-combo" promptText="Trier par" />
                                 <Button onAction="#handleSearchRH" styleClass="action-button" text="Rechercher">
                                    <graphic>
                                       <FontAwesomeIconView glyphName="SEARCH" />
                                    </graphic>
                                 </Button>
                                 <Button onAction="#handleSort" styleClass="action-button" text="Trier">
                                    <graphic>
                                       <FontAwesomeIconView glyphName="SORT" />
                                    </graphic>
                                 </Button>
                              </HBox>

                              <ScrollPane fitToWidth="true" styleClass="results-scroll">
                                 <VBox fx:id="rhContainer" spacing="10" styleClass="results-container" />
                              </ScrollPane>
                           </VBox>
                        </StackPane>
                     </Tab>

                     <!-- Requests Tab -->
                     <Tab text="Mes Demandes">
                        <StackPane styleClass="tab-content">
                           <VBox spacing="20" styleClass="requests-container">
                              <HBox alignment="CENTER_LEFT" styleClass="section-header">
                                 <FontAwesomeIconView glyphName="LIST" size="18" styleClass="section-icon" />
                                 <Label styleClass="section-title" text="Mes Demandes" />
                                 <Region HBox.hgrow="ALWAYS" />
                                 <Button styleClass="action-button, accent-button" text="Nouvelle Demande">
                                    <graphic>
                                       <FontAwesomeIconView glyphName="PLUS" />
                                    </graphic>
                                 </Button>
                              </HBox>

                              <TableView fx:id="requestsTable" styleClass="requests-table">
                                 <columns>
                                    <TableColumn text="ID" />
                                    <TableColumn text="Type" />
                                    <TableColumn text="Date" />
                                    <TableColumn text="Statut" />
                                    <TableColumn text="Actions" />
                                 </columns>
                              </TableView>
                           </VBox>
                        </StackPane>
                     </Tab>
                  </TabPane>
               </children>
            </VBox>
         </center>

         <!-- Footer -->
         <bottom>
            <HBox alignment="CENTER" styleClass="footer">
               <Label text="© 2025 - RHCONNECT | Tous droits réservés" />
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</StackPane>