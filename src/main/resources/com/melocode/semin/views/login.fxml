<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.melocode.semin.controllers.LoginController" prefHeight="300.0" prefWidth="400.0">
    <children>
        <!-- Title Label -->
        <Label text="Login" layoutX="150.0" layoutY="50.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <!-- Username Field -->
        <Label text="Username:" layoutX="60.0" layoutY="100.0" />
        <TextField fx:id="usernameField" layoutX="150.0" layoutY="100.0" prefWidth="200.0" promptText="Enter username" />

        <!-- Password Field -->
        <Label text="Password:" layoutX="60.0" layoutY="150.0" />
        <PasswordField fx:id="passwordField" layoutX="150.0" layoutY="150.0" prefWidth="200.0" promptText="Enter password" />

        <!-- Login Button -->
        <Button text="Login" layoutX="150.0" layoutY="200.0" onAction="#handleLogin" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" />
    </children>
</AnchorPane>
