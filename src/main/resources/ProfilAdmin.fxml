<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           stylesheets="@modern-style.css" fx:controller="controllers.ProfilAdminController">
   <children>


      <!-- Main Content -->
      <BorderPane prefWidth="1200" prefHeight="800">
         <left>
            <AnchorPane fx:id="menu" prefHeight="200.0" prefWidth="200.0" styleClass="menu" BorderPane.alignment="CENTER" />
         </left>
         <!-- Top Bar -->
         <top>
            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="top-bar">
               <padding>
                  <Insets top="15" right="30" bottom="15" left="30" />
               </padding>
               <children>
                  <Label styleClass="app-title" text="RHCONNECT" />
                  <Region HBox.hgrow="ALWAYS" />
                  <HBox alignment="CENTER" spacing="5" styleClass="user-info">
                     <FontAwesomeIconView glyphName="USER" size="16" styleClass="nav-icon" />
                     <Label fx:id="userNameLabel" styleClass="username" text="Administrator" />
                  </HBox>
                  <Button fx:id="logoutButton" onAction="#handleLogout" styleClass="logout-button" text="Déconnexion" />
               </children>
            </HBox>
         </top>

         <!-- Center Content -->
         <center>
            <VBox styleClass="content-container">
               <padding>
                  <Insets top="20" right="30" bottom="20" left="30" />
               </padding>
               <children>
                  <!-- Welcome Header -->
                  <HBox alignment="CENTER_LEFT" styleClass="welcome-header">
                     <FontAwesomeIconView glyphName="DASHBOARD" size="24" styleClass="section-icon" />
                     <Label styleClass="section-title" text="Dashboard Administrateur" />
                     <Region HBox.hgrow="ALWAYS" />
                     <Label fx:id="dateTimeLabel" styleClass="datetime-label" text="12/05/2025 16:21" />
                  </HBox>

                  <!-- Role Badge -->
                  <HBox alignment="CENTER_LEFT" styleClass="role-badge-container">
                     <Label fx:id="userRoleLabel" styleClass="role-badge" text="ADMIN" />
                     <Label fx:id="sessionInfoLabel" styleClass="session-info" text="Session active depuis: 16:00" />
                     <Region HBox.hgrow="ALWAYS" />
                     <Button fx:id="addUserButton" onAction="#handleAddUser" styleClass="action-button, accent-button" text="Ajouter Utilisateur">
                        <graphic>
                           <FontAwesomeIconView glyphName="USER_PLUS" />
                        </graphic>
                     </Button>
                  </HBox>

                  <!-- Search and Filter Container -->
                  <VBox styleClass="search-filter-container">
                     <HBox spacing="15" styleClass="search-container">
                        <VBox HBox.hgrow="ALWAYS">
                           <HBox spacing="10" alignment="CENTER_LEFT">
                              <FontAwesomeIconView glyphName="SEARCH" size="16" styleClass="field-icon" />
                              <TextField fx:id="searchField" promptText="Rechercher par nom ou email" styleClass="search-field" HBox.hgrow="ALWAYS" />
                           </HBox>
                        </VBox>
                        <ComboBox fx:id="sortComboBox" promptText="Trier par" styleClass="sort-combo" />
                        <Button onAction="#handleSearch" styleClass="action-button" text="Rechercher">
                           <graphic>
                              <FontAwesomeIconView glyphName="SEARCH" />
                           </graphic>
                        </Button>
                        <Button onAction="#handleSort" styleClass="action-button" text="Trier">
                           <graphic>
                              <FontAwesomeIconView glyphName="SORT" />
                           </graphic>
                        </Button>
                     </HBox>
                  </VBox>

                  <!-- Users List Container -->
                  <ScrollPane fitToWidth="true" styleClass="results-scroll" VBox.vgrow="ALWAYS">
                     <VBox fx:id="userContainer" spacing="10" styleClass="results-container" />
                  </ScrollPane>
               </children>
            </VBox>
         </center>

         <!-- Footer -->
         <bottom>
            <HBox alignment="CENTER" styleClass="footer">
               <Label text="© 2025 - RHCONNECT | Tous droits réservés" />
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</StackPane>