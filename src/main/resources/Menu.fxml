<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="menu" prefHeight="800.0" prefWidth="250.0" styleClass="menu" stylesheets="@dashboard.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MenuController">
    <children>
        <!-- Profile Section -->
        <VBox alignment="CENTER" layoutX="25.0" layoutY="30.0" spacing="10" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="30.0">
            <FontAwesomeIconView fill="WHITE" glyphName="USER_CIRCLE" size="70" />
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome">
                <font>
                    <Font name="Tahoma" size="17.0" />
                </font>
            </Text>
            <Text fx:id="usernameText" fill="#1e9e6b" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="test" text="Admin">
                <font>
                    <Font name="Tahoma Bold" size="20.0" />
                </font>
            </Text>
        </VBox>

        <!-- Divider Line -->
        <Line endX="100.0" layoutX="125.0" layoutY="180.0" startX="-100.0" stroke="WHITE" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" />

        <!-- Menu Buttons Section -->
        <ScrollPane fitToWidth="true" layoutX="0.0" layoutY="190.0" styleClass="transparent-scroll" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="190.0">
            <VBox spacing="12.0" styleClass="menu-buttons-container">
                <padding>
                    <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                </padding>
                <children>
                    <!-- Add User Management Button at the top -->
                    <Button mnemonicParsing="false" onAction="#redirectToGestionUsers" styleClass="menu-button" text="Gestion des utilisateurs">
                        <graphic>
                            <FontAwesomeIconView fill="#ffffff" glyphName="USERS" size="16" />
                        </graphic>
                    </Button>

                    <Button mnemonicParsing="false" onAction="#redirectToGestionDesFormation" styleClass="menu-button" text="Gestion des formations">
                        <graphic>
                            <FontAwesomeIconView fill="WHITE" glyphName="GRADUATION_CAP" size="16" />
                        </graphic>
                    </Button>
                    <Button mnemonicParsing="false" onAction="#redirectToToutesLesFormations" styleClass="menu-button" text="Toutes Les formations">
                        <graphic>
                            <FontAwesomeIconView fill="WHITE" glyphName="LIST" size="16" />
                        </graphic>
                    </Button>
                    <Button mnemonicParsing="false" onAction="#redirectToMesFormations" styleClass="menu-button" text="Mes formations">
                        <graphic>
                            <FontAwesomeIconView fill="WHITE" glyphName="BOOK" size="16" />
                        </graphic>
                    </Button>
                    <Button mnemonicParsing="false" onAction="#redirectToListeDemandeConge" styleClass="menu-button" text="Demander congé">
                        <graphic>
                            <FontAwesomeIconView fill="WHITE" glyphName="CALENDAR_PLUS_O" size="16" />
                        </graphic>
                    </Button>
                    <Button mnemonicParsing="false" onAction="#redirectToValidateConge" styleClass="menu-button" text="Valider congé">
                        <graphic>
                            <FontAwesomeIconView fill="WHITE" glyphName="CHECK_CIRCLE" size="16" />
                        </graphic>
                    </Button>
                    <Button mnemonicParsing="false" onAction="#redirectToGestionAbsence" styleClass="menu-button" text="Liste Absence">
                        <graphic>
                            <FontAwesomeIconView fill="WHITE" glyphName="CLOCK_O" size="16" />
                        </graphic>
                    </Button>
                    <Button mnemonicParsing="false" onAction="#redirectToEspaceRh" styleClass="menu-button" text="Espace RH">
                        <graphic>
                            <FontAwesomeIconView fill="WHITE" glyphName="USERS" size="16" />
                        </graphic>
                    </Button>
                    <Button mnemonicParsing="false" onAction="#redirectToEspaceCandidat" styleClass="menu-button" text="Espace Candidat">
                        <graphic>
                            <FontAwesomeIconView fill="WHITE" glyphName="USER_PLUS" size="16" />
                        </graphic>
                    </Button>
                    <Button mnemonicParsing="false" onAction="#redirectToSuiviCandidatures" styleClass="menu-button" text="Suivi candidatures">
                        <graphic>
                            <FontAwesomeIconView fill="WHITE" glyphName="TASKS" size="16" />
                        </graphic>
                    </Button>
                    <Button mnemonicParsing="false" onAction="#adem" styleClass="menu-button" text="Réclamation">
                        <graphic>
                            <FontAwesomeIconView fill="WHITE" glyphName="EXCLAMATION_CIRCLE" size="16" />
                        </graphic>
                    </Button>
                    <Button mnemonicParsing="false" onAction="#mohamed" styleClass="menu-button" text="Gestion des séminaires">
                        <graphic>
                            <FontAwesomeIconView fill="WHITE" glyphName="BUILDING" size="16" />
                        </graphic>
                    </Button>
                </children>
            </VBox>
        </ScrollPane>

        <!-- Logout Button -->
        <Button fx:id="logoutBtn" layoutX="25.0" layoutY="740.0" mnemonicParsing="false" onAction="#handleLogout" styleClass="menu-logout-btn" text="Logout" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0">
            <graphic>
                <FontAwesomeIconView fill="WHITE" glyphName="SIGN_OUT" size="16" />
            </graphic>
        </Button>
    </children>
</AnchorPane>