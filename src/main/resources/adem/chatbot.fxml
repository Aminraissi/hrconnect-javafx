<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.melocode.hrreclam.ChatBotController" stylesheets="@chatbot.css">

    <VBox spacing="10" styleClass="chatbot-container" layoutX="10" layoutY="10" prefWidth="380" prefHeight="500">

        <TextArea fx:id="chatArea" editable="false" wrapText="true" prefHeight="400" styleClass="chat-area"/>

        <HBox spacing="10" styleClass="input-container">
            <TextField fx:id="userInput" promptText="Posez votre question..." styleClass="input-field"/>
            <Button fx:id="sendButton" text="Envoyer" onAction="#sendMessage" styleClass="send-button"/>
        </HBox>
    </VBox>
</AnchorPane>
